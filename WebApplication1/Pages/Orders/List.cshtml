@page "{Id=0}"

@using WebApplication1.DataAccess
@model WebApplication1.Pages.Orders.ListModel
@{
    Layout = "_Layout";
}

@{
    var employees = (List<Employee>)ViewData["employees"];
}

<div>
    <table style="border: 2px solid black; padding: 10px">
            <tr>
                <th>List of Employee</th>
                <th>List of Order</th>
            </tr>
        @foreach (var e in employees)
        {
            <tr>
                        <td style="text-align:left; vertical-align: top">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Orders/List" asp-route-id="@e.EmployeeId">@e.FirstName @e.LastName</a>
                            <a href="/Orders/List/@e.EmployeeId">@e.FirstName @e.LastName</a>
                        </td>
                    <td>
                        @foreach (var o in e.Orders)
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Orders/OrderDetail" asp-route-id="@o.OrderId">@o.OrderId</a>
                        <br/>
                        }
                    </td>
            </tr>
        }
    </table>
</div>
